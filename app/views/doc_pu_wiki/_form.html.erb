	<div class="splitcontentleft">
		<p><%= f.select :wiki_page_id, options_from_collection_for_select(@project.wiki.pages, :id, :title, @doc_pu_wiki.wiki_page_id), :required => true %></p>
		<p><%= f.text_field :chapter_name, :size => 30 %> <%= acronym_info_tag t(:info_chapter_name) %></p>
