<div class="contextual">
<%= link_to_if_authorized t(:link_view_document), {:controller => :doc_pu, :action => :open, :project_id => @project, :id => @doc}, :class => "icon icon-file application-pdf" %>
<%= link_to_if_authorized t(:link_edit_document), {:controller => :doc_pu, :action => :edit, :project_id => @project, :id => @doc}, :class => "icon icon-edit" %>
<%= link_to_if_authorized t(:link_code), {:controller => :doc_pu, :action => :code, :project_id => @project, :id => @doc}, :class => "icon icon-file text-plain" %>
</div>

<h2><%=t :heading_build_document %></h2>

<div id="log-result">
	<div style="height:400px" class="box autoscroll">
	</div>
	<div class="flash warning"><%=t :text_press_build_button %></div>
</div>
<p>
<%= button_to_remote t(:button_build),
	:url => {:controller => :doc_pu, :action => :build_remote, :project_id => @project, :id => @doc},
	:update => "log-result";
%>

<%= button_to_remote t(:button_clean),
	:url => {:controller => :doc_pu, :action => :clean_remote, :project_id => @project, :id => @doc},
	:update => "log-result";
%>
<%= acronym_info_tag t(:info_build_latex_multiple_times) %>
